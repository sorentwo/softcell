#badging
  %h2 s√∏ren
  %p 414 S Gables Blvd <br />Wheaton IL 60187

#content
  %h2.title= invoice.title

  %table#meta
    %tr
      %td.thead Client
      %td= invoice.client.name
    %tr
      %td.thead Attn
      %td= invoice.client.attention
      %tr
        %td.thead Address
        %td #{invoice.client.address} <br /> #{invoice.client.city} #{invoice.client.state}, #{invoice.client.zipcode}

  .description
    %p= invoice.description

#support
  %dl
    %dt Date
    %dd= format_date(invoice.created_at)
  %dl
    %dt Due
    %dd= format_date(invoice.due_at)
  %dl
    %dt Invoice Number
    %dd= sprintf('%05d', invoice.number)


%table#itemized
  %tr
    %th.item-head Item
    %th.cost-head Cost
  - invoice.items.each do |item|
    %tr
      %td.item= item.name
      %td.cost= format_currency(item.cost)
  %tr
    %td.total-head Total
    %td.total= format_currency(invoice.total)
