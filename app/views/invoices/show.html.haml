#badging
  %h2 s√∏ren
  %p 336 S Kenilworth Ave <br />Oak Park IL 60302

#content
  %h2.title= @invoice.title

  %table#meta
    %tr
      %td.thead Client
      %td= @invoice.client.name
    %tr
      %td.thead Attn
      %td= @invoice.client.attention
      %tr
        %td.thead Address
        %td #{@invoice.client.address} <br /> #{@invoice.client.city} #{@invoice.client.state}, #{@invoice.client.zipcode}

  .description
    %p= @invoice.description

#support
  %dl
    %dt Date
    %dd= @invoice.created_at.strftime("%B %d, %Y")
  %dl
    %dt Due
    %dd= @invoice.created_at.next_month.strftime("%B %d, %Y")
  %dl
    %dt Invoice Number
    %dd= sprintf('%05d', @invoice.number)


%table#itemized
  %tr
    %th.item-head Item
    %th.cost-head Cost
  - @invoice.items.each do |item|
    %tr
      %td.item= item.name
      %td.cost= "$#{item.cost}"
  %tr
    %td.total-head Total
    %td.total= "$#{@invoice.items.inject(0) { |sum, item| sum += item.cost }}"
