!!!5
%html
  %head
    %title Softcell
    = stylesheet_link_tag 'style'
    = csrf_meta_tag

  %body{ id: controller.controller_name, class: controller.action_name }
    - if session[:persisted]
      %header
        %nav
          = link_to 'dashboard', dashboard_url
          = link_to 'invoices', invoices_url
          = link_to 'clients', clients_url
          = link_to 'logout', logout_url, id: 'logout-link', method: :delete

    #container
      = yield

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js'
    = javascript_include_tag :all
